#!/usr/bin/env node

var argparse = require('argparse')
var term = require('terminal-kit').terminal
var kodikeys = require('..')

// Command line options
var cli = new argparse.ArgumentParser({
  prog:     'kodikeys',
  version:  require('../package.json').version,
  addHelp:  true,
})

cli.addArgument([ 'host' ], {
  help:   'The Kodi host to connect to',
  defaultValue: 'localhost',
  nargs: '?'
})

cli.addArgument([ '-p', '--port' ], {
  help:   'The port to connect to (default: 9777)',
  defaultValue: '9777',
})

cli.addArgument(['--debug'], {
  help: 'Shortcut for --log-level debug',
  dest: 'log_level',
  constant: 'debug',
  action: 'storeConst',
  defaultValue: 'warn'
})

cli.addArgument(['--log-level'], {
  defaultValue: 'warn',
  choices: ['error', 'warn', 'info', 'debug']
})

var opts = cli.parseArgs()

// run the command
kodikeys.start(opts)
  .then( () => {
    console.log('Bye')
    term.processExit(0)
  })
  .catch( (msg, errors) => {
    term.processExit(1)
  })
